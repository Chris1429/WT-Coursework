body {
	margin: 0;
	padding: 0;
	max-width: inherit;
	background: url(background.jpg) no-repeat center fixed;
	background-size: cover;
}

header, footer {
	text-align: center;
	padding: 0.3em 0;
	background-color: #87ceeb;
}

table, th, td {
	border-collapse: collapse;
	width: 50%;
	padding: 15px 32px;
	text-align: center;
	text-decoration: none;
	font-size: 1.8vw;
	margin: 4px 2px;
	cursor: none;
	background-color: white; 
	color: #008CBA; 
	border: 2px solid #008CBA;
	box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}

th, td, tr {
  text-align: center;
  padding: 12px;
  height: 1vh;
}

th {
	background-color: #008CBA;
	color: white;
	height: 1vh;
}

.centre {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50vh;
}

.button {  
	padding: 15px 32px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 1.8vw;
	margin: 4px 2px;
	cursor: pointer;
	border-radius: 12px;
	background-color: white; 
	color: #008CBA; 
	border: 2px solid #008CBA;
	box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}

.button:hover {
	background-color: #008CBA;
	color: white;
}