body {
	margin: 0;
	padding: 0;
	max-width: inherit;
	background: url(background.jpg) no-repeat center fixed;
	background-size: cover;
}

header, footer {
	text-align: center;
	padding: 0.3em 0;
	background-color: #87ceeb;
	box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}

.centre {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 27vh;
}

.grid-container {
	display: grid;
	justify-content: center;
	grid-template-columns: 200px 200px 200px;
	gap: 5vw;
	transform: translate(0px, 10vh);
} 

.container {
	width: 200px;
	height: 125px;
	position: left;
}

.button {  
	padding: 15px 32px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 16px;
	margin: 4px 2px;
	cursor: pointer;
	border-radius: 12px;
	box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}

.disabled {
	opacity: 0.6;
	cursor: not-allowed;
}

