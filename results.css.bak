body {
	margin: 0;
	padding: 0;
	max-width: inherit;
	background: url(background.jpg) no-repeat center fixed;
	background-size: cover;
}



header, footer {
	text-align: center;
	padding: 0.3em 0;
	background-color: #87ceeb;
}

.grid-container {
	display: grid;
	justify-content: center;
	grid-template-columns: 300px 125px;
	gap: 5vw;
	background-color: #87ceeb;
	transform: translate(0px, 13vh);
} 

.container {
	width: 300px;
	height: 125px;
	position: left;
	background: #87ceeb;
}

.button {
  
	padding: 15px 32px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 16px;
	margin: 4px 2px;
	cursor: pointer;
	border-radius: 12px;
}

.button1 {
	background-color: white;
	color: #4CAF50;
	border: 2px solid #4CAF50;
}

.button1:hover {
	background-color: #4CAF50;
	color: white;
}

.button2 {
	background-color: white; 
	color: #008CBA; 
	border: 2px solid #008CBA;
}

.button2:hover {
	background-color: #008CBA;
	color: white;
}

.button3 {
